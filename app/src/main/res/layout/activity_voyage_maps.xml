<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".VoyageMaps">

<!-- La map -->
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".VoyageMaps" />

<!-- Le bouton par-dessus la map -->
    <Button
        android:id="@+id/button_export_gpx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="16dp"
        android:onClick="onClickExportGPX"
        android:text="Exporter" />

    <Button
        android:id="@+id/btn_end_voyage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terminer le voyage"
        android:layout_gravity="center"
        android:onClick="onClickEndVoyage" />

</FrameLayout>
